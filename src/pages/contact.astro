---
import emailjs from '@emailjs/browser';
import Layout from '../layouts/Layout.astro';
import Title from "../components/title.astro";
---

<Layout>
  <Title title="Contáctame" style="text-4xl border-b-4 border-rose-300 pb-4"/>
  <section class="flex items-center justify-center w-full h-fit">
    <form class="formulario flex flex-col gap-5 p-10 rounded-lg border-4 border-orange-200 bg-gray-50 text-gray-900">
      <label>
        Nombre:
        <input type="text" name="name" required class="bg-gray-200"/>
      </label>

      <label>
        Correo Electrónico:
        <input type="email" name="email" required class="bg-gray-200"/>
      </label>

      <label>
        Mensaje:
        <textarea name="message" required class="bg-gray-200 min-h-30"></textarea>
      </label>

      <input type="submit" value="Enviar" class="bg-amber-200 active:bg-amber-400 cursor-pointer transition-all duration-100">
    </form>
  </section>
</Layout>

