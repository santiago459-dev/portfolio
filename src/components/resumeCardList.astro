---
import { Icon } from 'astro-icon/components'
import Title from "./title.astro"
import Card from "./card.astro"

const {icon, title, cardList} = Astro.props
---

<div class="flex flex-col gap-2 w-full h-content">
  <span class="flex items-center gap-2 w-full h-fit">
    <Icon name={icon} class="text-4xl text-gray-800 w-10 h-10"/>
    <Title title={title} style="text-2xl text-gray-700"/>
  </span>
  <ul class="flex flex-col gap-5 w-full h-fit">
    {cardList.map((index)=> <Card title={index.title} paragraph={index.paragraph} style={index.style}/> )}
  </ul>
</div>


